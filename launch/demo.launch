<launch>
    <include file="$(find rplidar_ros)/launch/rplidar.launch"></include>
    <node pkg="htutorial_9" type="serial_bridge.sh" name="bridge" output="screen"/>
    <node pkg="tf" type="static_transform_publisher" name="ROSbot2_laser" args="0 0 0.1 3.14 0 0 ROSbot2_base laser 10" />
    <node pkg="pose_to_tf" type="pose_to_tf_transform" name="pose_to_tf_transform" required="true"/>
    <node pkg="gmapping" type="slam_gmapping" name="gmapping">
        <param name="base_frame" value="ROSbot2_base"/>
        <param name="odom_frame" value="odom" />
        <param name="delta" value="0.025"/>
        <param name="xmin" value="-2.5"/>
        <param name="ymin" value="-2.5"/>
        <param name="xmax" value="2.5"/>
        <param name="ymax" value="2.5"/>
        <param name="maxUrange" value="5"/>    
    </node>

    <node pkg="move_base" type="move_base" name="move_base" output="screen">
        <param name="controller_frequency" value="1.0"/>
        <rosparam file="$(find exploration_demo)/costmap_common_params.yaml" 
            command="load" ns="global_costmap" />
        <rosparam file="$(find exploration_demo)/costmap_common_params.yaml" 
            command="load" ns="local_costmap" />
        <rosparam file="$(find exploration_demo)/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find exploration_demo)/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find exploration_demo)/trajectory_planner.yaml" command="load" />
    </node>

    <node pkg="frontier_exploration" type="explore_client" name="explore_client" output="screen"/>

    <node pkg="frontier_exploration" type="explore_server" 
        name="explore_server" output="screen" >
        <param name="frequency" type="double" value="1.0"/>
        <param name="goal_aliasing" type="double" value="0.5"/>
        <rosparam ns="explore_costmap" subst_value="true" 
            file="$(find exploration_demo)/exploration.yaml" command="load" />
    </node>
</launch>
